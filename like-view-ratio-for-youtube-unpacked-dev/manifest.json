{
  "name": "Like view ratio for Youtube",
  "version": "0.0.1",

  "manifest_version": 2,

  "background": { "scripts": ["hot-reload.js"] },

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],

  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}
